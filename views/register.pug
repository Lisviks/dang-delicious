extends layout

block content
  .inner
    form.form(action='/register' method='POST')
      h2 Register
      label(for='name') Name
      input(type='text' name='name' value=(locals.body ? locals.body.name : ''))
      label(for='email') Email
      input(type='email' name='email' value=(locals.body ? locals.body.email : ''))
      label(for='password') Password
      input(type='password' name='password' value=(locals.body ? locals.body.password : ''))
      label(for='password-confirm') Confirm Password
      input(type='password' name='password-confirm' value=(locals.body ? locals.body['password-confirm'] : ''))
      input.button(type='submit' value='Register')